datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  posts     Post[]    @relation("Post_author")
  createdAt DateTime? @default(now())
}

model Post {
  id       String  @id @default(cuid())
  title    String  @default("")
  content  String  @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  author   User?   @relation("Post_author", fields: [authorId], references: [id])
  authorId String? @map("author")
  tags     Tag[]   @relation("Post_tags")

  @@index([authorId])
}

model Tag {
  id    String @id @default(cuid())
  name  String @default("")
  posts Post[] @relation("Post_tags")
}

model Project {
  id               String       @id @default(cuid())
  avatar_id        String?
  avatar_filesize  Int?
  avatar_width     Int?
  avatar_height    Int?
  avatar_extension String?
  name             String       @default("")
  content          String       @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  socialWeb        String       @default("")
  socialX          String       @default("")
  socialDiscord    String       @default("")
  socialTelegram   String       @default("")
  tags             ProjectTag[] @relation("Project_tags")
  categories       Category[]   @relation("Category_categories")
  isAnnounced      Boolean      @default(false)
  isNative         Boolean      @default(false)
}

model ProjectTag {
  id   String    @id @default(cuid())
  name String    @default("")
  tags Project[] @relation("Project_tags")
}

model Category {
  id         String    @id @default(cuid())
  name       String    @default("")
  categories Project[] @relation("Category_categories")
}
